<div class="container">
  <div class="row my-4">
    <%= form_tag tasks_path, method: :get do %>
      <div class="form-group col-xs-4">
        <label>Title</label>
        <%= text_field_tag :title, params[:title], class:"form-control" %>
      </div>
      <div class="form-group col-xs-4">
        <label>Description</label>
        <%= text_field_tag :description, params[:description], class:"form-control" %>
      </div>
      <div class="form-group col-xs-4">
        <label>Sort by completed at</label>
        <%= select_tag :completed_at, options_for_select(["completed_at_asc", "completed_at_desc"], params[:completed_at]), prompt: "Select something", class:"form-control" %>
      </div>
      <div class="col-xs-12">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    <% end %>
  </div>
  <div class="row my-4">
    <% @tasks.each do |task| %>
      <div class="col-xs-6 my-2">
        <%= link_to task.title, task %>
        <% if task.completed_at < Time.current %>
          <span class="text-danger">- Overdue</span>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= link_to "Create new task", new_task_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

