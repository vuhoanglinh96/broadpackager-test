<div class="container my-4">
  <div class="row">
    <p class="my-2">Title: <%= @task.title %></p>
    <p class="my-2">Description: <%= @task.description %></p>
    <p class="my-2">Completed at: <%= @task.completed_at %></p>
    <p class="my-2">Assignee: <%= @task.user&.email %></p>
    <p class="my-2">Status: <%= @task.status %></p>
  </div>
  <div class="row">
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %>
    <%= button_to "Delete", @task, method: :delete, form: {style: 'display: inline-block;'}, class: "btn btn-danger" %>
    <%= link_to "Back", tasks_path, class: "btn btn-default" %>
  </div>
</div>
